{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist",          // Sortir les fichiers dans dist
    "rootDir": "./src",          // Racine des fichiers TS
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,         // Générer des fichiers .d.ts
    "sourceMap": true            // Générer des fichiers .map pour faciliter le débogage
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
